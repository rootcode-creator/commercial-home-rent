<% layout("/layouts/boilerplate") -%>


    <div class="row mt-3 mb-5">
        <h1 class="col-6 offset-3 mt-3 signup-header">Signup</h1>
        <div class="col-6  offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" name="username" placeholder="Choose a username" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" placeholder="Enter your valid email" class="form-control" required>
                </div>


                <div class="mb-4">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" placeholder="Choose a password" class="form-control" required>
                </div>

                <button class="btn btn-success mb-3">SignUp</button>
            </form>
        </div>
    </div>